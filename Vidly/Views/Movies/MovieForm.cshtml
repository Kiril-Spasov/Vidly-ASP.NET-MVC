@model Vidly.ViewModels.MovieFormViewModel

@{
	ViewBag.Title = Model.Title;
}

<h2>@Model.Title</h2>

<form asp-action="Save">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="@Model.Movie.Name" class="control-label"></label>
		<input asp-for="@Model.Movie.Name" class="form-control"/>
		<span asp-validation-for="@Model.Movie.Name" class="text-danger"></span>
	</div>
	<div class="form-group mt-3">
		<label asp-for="@Model.Movie.ReleaseDate" class="control-label"></label>
		<input asp-for="@Model.Movie.ReleaseDate" class="form-control"/>
		<span asp-validation-for="@Model.Movie.ReleaseDate" class="text-danger"></span>
	</div>
	<div class="form-group mt-3">
		<label asp-for="@Model.Movie.GenreId" class="control-label"></label>
		<select asp-for="@Model.Movie.GenreId" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))" class="form-control">
		<option value="">--Select--</option>
		</select>
	</div>
	<div class="form-group mt-3">
		<label asp-for="@Model.Movie.NumberInStock" class="control-label"></label>
		<input asp-for="@Model.Movie.NumberInStock" class="form-control"/>
		<span asp-validation-for="@Model.Movie.NumberInStock" class="text-danger"></span>
	</div>
	<input type="hidden" asp-for="@Model.Movie.Id"/>
	<button type="submit" class="btn btn-primary mt-3">Save</button>
</form>
@model Vidly.ViewModels.CustomerFormViewModel

@{
	ViewBag.Title = "New";
}

<h2>New Customer</h2>

<form asp-action="Save">
	<div asp-validation-summary="ModelOnly" class="text danger"></div>
	<div class="form-group mt-3">
		<label asp-for="@Model.Customer.Name" class="control-label"></label>
		<input asp-for="@Model.Customer.Name" class="form-control"/>
		<span asp-validation-for="@Model.Customer.Name" class="text-danger"></span>
	</div>
	<div class="form-group mt-3">
		<label asp-for="@Model.Customer.MembershipTypeId" class="control-label"></label>
		<select asp-for="@Model.Customer.MembershipTypeId" asp-items="@(new SelectList(Model.MembershipTypes, "Id", "Name"))" class="form-control">
			 <option value="">--Select--</option>
		</select>
		<span asp-validation-for="@Model.Customer.MembershipTypeId" class="text-danger"></span>
	</div>
	<div class="form-group mt-3">
		<label asp-for="@Model.Customer.Birthdate" class="control-label"></label>
		<input asp-for="@Model.Customer.Birthdate" class="form-control"/>
		<span asp-validation-for="@Model.Customer.Birthdate" class="text-danger"></span>
	</div>
	<div class="checkbox mt-3">
		<label>
			<input asp-for="@Model.Customer.IsSubscribedToNewsletter" /> Subscribed to Newsletter?
		</label>
	</div>
	<input type="hidden" asp-for="@Model.Customer.Id" />
	<button type="submit" class="btn btn-primary mt-1">Save</button>
</form>
